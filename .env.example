# Google AI (alternativa)
GOOGLE_AI_API_KEY="your-google-ai-key"

# ===========================================
# üìß EMAIL CONFIGURATION
# ===========================================
# SendGrid
SENDGRID_API_KEY="SG.your-sendgrid-api-key"
SENDGRID_FROM_EMAIL="noreply@yourcompany.com"

# SMTP (alternativa)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"

# ===========================================
# üì± SMS & WHATSAPP
# ===========================================
# Twilio
TWILIO_ACCOUNT_SID="your-twilio-account-sid"
TWILIO_AUTH_TOKEN="your-twilio-auth-token"
TWILIO_PHONE_NUMBER="+1234567890"

# WhatsApp Business API
WHATSAPP_TOKEN="your-whatsapp-token"
WHATSAPP_PHONE_ID="your-phone-number-id"

# ===========================================
# üîó INTEGRATIONS
# ===========================================
# Slack
SLACK_BOT_TOKEN="xoxb-your-slack-bot-token"
SLACK_WEBHOOK_URL="https://hooks.slack.com/services/..."

# HubSpot
HUBSPOT_API_KEY="your-hubspot-api-key"

# Mailchimp
MAILCHIMP_API_KEY="your-mailchimp-api-key"
MAILCHIMP_SERVER_PREFIX="us1"

# Google Analytics
GA_TRACKING_ID="G-XXXXXXXXXX"

# ===========================================
# ‚òÅÔ∏è CLOUD STORAGE
# ===========================================
# AWS S3
AWS_ACCESS_KEY_ID="your-aws-access-key"
AWS_SECRET_ACCESS_KEY="your-aws-secret-key"
AWS_REGION="us-east-1"
AWS_S3_BUCKET="your-s3-bucket-name"

# Cloudinary (alternativa)
CLOUDINARY_CLOUD_NAME="your-cloud-name"
CLOUDINARY_API_KEY="your-api-key"
CLOUDINARY_API_SECRET="your-api-secret"

# ===========================================
# üìä MONITORING & ANALYTICS
# ===========================================
# Sentry (Error Tracking)
SENTRY_DSN="https://your-sentry-dsn"

# New Relic
NEW_RELIC_LICENSE_KEY="your-new-relic-key"

# Google Analytics
GOOGLE_ANALYTICS_ID="G-XXXXXXXXXX"

# ===========================================
# üö¶ RATE LIMITING & PERFORMANCE
# ===========================================
# Rate limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60000

# Cache TTL (em milissegundos)
CACHE_TTL=300000

# Redis (para cache distribu√≠do)
REDIS_URL="redis://localhost:6379"
REDIS_PASSWORD="your-redis-password"

# ===========================================
# üîç LOGGING & DEBUGGING
# ===========================================
# Log level: error, warn, info, debug
LOG_LEVEL="info"

# Log file path
LOG_FILE_PATH="./logs"

# Enable debug mode
DEBUG=false

# ===========================================
# üåê APPLICATION SETTINGS
# ===========================================
# Environment
NODE_ENV="development"

# Application URL
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# API Base URL
NEXT_PUBLIC_API_URL="http://localhost:3000/api"

# ===========================================
# üîß FEATURE FLAGS
# ===========================================
# Enable/disable features
ENABLE_AI_FEATURES=true
ENABLE_ANALYTICS=true
ENABLE_NOTIFICATIONS=true
ENABLE_INTEGRATIONS=true
ENABLE_BACKUP=true
ENABLE_METRICS=true

# ===========================================
# üè• HEALTH CHECK & MONITORING
# ===========================================
# Health check interval (em milissegundos)
HEALTH_CHECK_INTERVAL=30000

# Enable detailed health checks
ENABLE_DETAILED_HEALTH_CHECK=true

# ===========================================
# üîí SECURITY SETTINGS
# ===========================================
# CORS origins (separados por v√≠rgula)
CORS_ORIGINS="http://localhost:3000,https://yourdomain.com"

# Enable HTTPS redirect
FORCE_HTTPS=false

# Content Security Policy
CSP_ENABLED=true

# ===========================================
# üì± PWA SETTINGS
# ===========================================
# PWA enabled
PWA_ENABLED=true

# Push notifications
VAPID_PUBLIC_KEY="your-vapid-public-key"
VAPID_PRIVATE_KEY="your-vapid-private-key"

# ===========================================
# üåç INTERNATIONALIZATION
# ===========================================
# Default language
