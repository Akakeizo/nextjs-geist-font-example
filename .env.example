BRAND_SECONDARY_COLOR="#10B981"

# Company info
COMPANY_NAME="Sua Empresa"
COMPANY_LOGO="/logo.png"

# ===========================================
# üìà BUSINESS SETTINGS
# ===========================================
# Currency
DEFAULT_CURRENCY="BRL"

# Timezone
DEFAULT_TIMEZONE="America/Sao_Paulo"

# Business hours
BUSINESS_HOURS_START="09:00"
BUSINESS_HOURS_END="18:00"

# ===========================================
