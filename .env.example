# ===========================================
# üöÄ PERFORMANCE SETTINGS
# ===========================================
# Enable compression
ENABLE_COMPRESSION=true

# Enable caching
ENABLE_CACHING=true

# Bundle analyzer
ANALYZE_BUNDLE=false

# ===========================================
# üß™ TESTING SETTINGS
# ===========================================
# Test environment
